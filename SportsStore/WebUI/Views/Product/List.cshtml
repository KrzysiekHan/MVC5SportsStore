@model WebUI.Models.ProductListViewModel

@{
    ViewBag.Title = "Produkty";
}

@foreach (var p in Model.Products)
{
    <div class="well">
        <h3>
            <strong>@p.Name</strong>
            <span class="pull-right col-form-label label-primary">@p.Price.ToString("c")</span>
        </h3>
        <span class="lead">@p.Description</span>
    </div>
}
<div class="btn-group pull-right">
    @Html.PageLinks(Model.PaginInfo, x=>Url.Action("List",new { page = x}))
</div>

